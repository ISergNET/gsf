<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1"
    android:baselineAligned="false"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/labelDistance"
        android:layout_weight="0.01"
        android:textColor="#ffffaf03"
        android:singleLine="false"
        android:textStyle="bold|italic"
        android:editable="false"
        android:text="@string/lbl_distance" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textFilter|textMultiLine|textPostalAddress"
        android:ems="10"
        android:id="@+id/editDistance"
        android:layout_weight="0.01"
        android:singleLine="false"
        android:maxLines="3"
        android:minLines="1"
        android:enabled="false"
        android:focusable="false"
        android:editable="false"
        android:textColor="@android:color/background_light"
        android:text="example"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblCopyright"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.01"
        android:gravity="center_horizontal" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnOpenSaleList"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.5"
        android:adjustViewBounds="false"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:src="@drawable/garage_sale_logo"
        android:cropToPadding="false"
        android:contentDescription="@string/btnOpenSaleList"
        android:longClickable="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnSettings"
        android:id="@+id/btnSettings"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.01" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:gravity="bottom"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/text"
            android:layout_weight="100"
            android:textColor="#ff08ca50"
            android:gravity="bottom|left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No signal"
            android:id="@+id/prvdView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="33"
            android:gravity="center_horizontal|bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Searching..."
            android:id="@+id/cView"
            android:layout_gravity="right"
            android:layout_weight="34"
            android:gravity="bottom|right"
            android:textColor="#ff08ca50"
            android:singleLine="false" />
    </LinearLayout>

</LinearLayout>